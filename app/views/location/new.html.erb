<%= render :partial=> "common/admin_header"%>
 <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        <%= " #{t(:label_add)} #{t(:label_locations)}" %>
      </h1>
      <%= link_to t(:label_add),:controller=>:employees,:action=>:new %>
    </section>

    <!-- Main content -->
    <section class="content">
      <!-- Info boxes -->
      <div class="row">
        <div class=" col-xs-12">
          <div class="info-box">
            <div class="info-box-content">
              <%= form_for @location,url:location_index_path,:html => {:class=>"form-horizontal"} do |l| %>
              <div class="box-body">
                <div class="form-group">
                  <%= l.label :name,:class=>"col-sm-2 control-label" %>

                  <div class="col-sm-10">
                    <%= l.text_field :name,:required=>true,:class=>"form-control" %>
                  </div>
                </div>
              </div>
              <!-- /.box-body -->
              <div class="box-footer">
                <%= l.submit :add,:class=>"btn btn-info pull-right" %>
              </div>
              <% end %>
            </div>
            <!-- /.info-box-content -->
          </div>
          <!-- /.info-box -->
        </div>
      </div>
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->

  <footer class="main-footer">
    <div class="pull-right hidden-xs">
      <b>Version</b> 2.4.0
    </div>
    <strong>Copyright &copy; 2014-2016 <a href="https://adminlte.io">Almsaeed Studio</a>.</strong> All rights
    reserved.
  </footer>
</div>
<!-- ./wrapper -->
</body>
</html>