<div class="wrapper">
  <header class="main-header">
    <!-- Logo -->
    <a href="/admin" class="logo">
      <!-- mini logo for sidebar mini 50x50 pixels -->
      <span class="logo-mini"><b>P</b>roject</span>
      <!-- logo for regular state and mobile devices -->
      <span class="logo-lg"><b>M</b>anagement</span>
    </a>
    <!-- Header Navbar: style can be found in header.less -->
    <nav class="navbar navbar-static-top">
      <!-- Sidebar toggle button-->
      <!-- Navbar Right Menu -->
      <div class="navbar-custom-menu">
        <ul class="nav navbar-nav">
          <li class="dropdown user user-menu">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <span class="hidden-xs"><%= @user.username %></span>
            </a>
            <ul class="dropdown-menu">
              <!-- User image -->
              <li class="user-header">
                <p>
                  <%= @user.username %>
                </p>
                 <p>
                  <%= @user.role %>
                </p>
              </li>
              <!-- Menu Body -->
              <!-- Menu Footer-->
              <li class="user-footer">
                <div class="pull-right">
                <%= link_to t(:label_sign_out), {:controller=>:login,:action=>:logout},:class=>"btn btn-default btn-flat" %>
                </div>
              </li>
            </ul>
          </li>
        </ul>
      </div>
    </nav>
  </header>
  <aside class="main-sidebar">
    <section class="sidebar">
      <ul class="sidebar-menu" data-widget="tree">
        <li class="active treeview menu-open">
          <%= link_to t(:label_dashboard), :controller=>:user,:action=>:index %>
        </li>
        <li>
          <%= link_to t(:label_projects), :controller=>:project,:action=>:index %>
        </li>
      </ul>
    </section>
    <!-- /.sidebar -->
  </aside>